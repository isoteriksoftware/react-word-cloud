{
  "name": "react-word-cloud",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "author": "Imran Abdumalik <imranabdulmalik01@gmail.com>",
  "description": "A lightweight and customizable React word cloud library powered by d3-cloud, featuring built-in animations, tooltips, and flexible word rendering.",
  "homepage": "https://github.com/isoteriksoftware/react-word-cloud#readme",
  "license": "MIT",
  "keywords": [
    "react-cloud",
    "react-word-cloud",
    "react word cloud",
    "word-cloud",
    "d3-cloud",
    "d3",
    "react",
    "cloud",
    "visualization"
  ],
  "main": "./dist/react-word-cloud.umd.js",
  "module": "./dist/react-word-cloud.es.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -b && vite build",
    "build:local": "npm run build && npx yalc push",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint --fix 'src/**/*.{ts,tsx}'",
    "format": "prettier --write src/**/*.{ts,tsx} --config ./.prettierrc",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/isoteriksoftware/react-word-cloud"
  },
  "bugs": {
    "url": "https://github.com/isoteriksoftware/react-word-cloud/issues"
  },
  "dependencies": {
    "csstype": "^3.1.3",
    "d3-cloud": "^1.2.7",
    "d3-scale": "^4.0.2",
    "d3-scale-chromatic": "^3.1.0",
    "react-fast-compare": "^3.2.2"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/d3-cloud": "^1.2.9",
    "@types/d3-scale": "^4.0.9",
    "@types/d3-scale-chromatic": "^3.1.0",
    "@types/node": "^22.13.8",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.25.0",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^3.6.3",
    "vite-plugin-linter": "^3.0.1",
    "vite-tsconfig-paths": "^5.1.4",
    "yalc": "^1.0.0-pre.53"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npm run lint",
      "npm run format"
    ]
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/react-word-cloud.es.js",
      "require": "./dist/react-word-cloud.umd.js"
    }
  },
  "engines": {
    "node": ">=20"
  }
}
